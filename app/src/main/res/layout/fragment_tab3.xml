<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/m1_jsh"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--android:stretchColumns="0,2,4,6">-->

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="10px"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:gravity="center"
                android:maxLines="1"
                android:text="货币"
                android:textColor="#fff"
                android:textSize="@dimen/tab_text_big" />

            <View
                android:layout_width="10px"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_item_name2"
                android:layout_width="10px"
                android:layout_height="wrap_content"
                android:layout_weight="13"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="20px"
                android:text="买入汇率"
                android:textColor="#fff"
                android:textSize="@dimen/tab_text_big" />

            <View
                android:layout_width="10px"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_item_name3"
                android:layout_width="10px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_weight="13"
                android:gravity="center"
                android:maxLines="1"
                android:text="卖出汇率"
                android:textColor="#fff"
                android:textSize="@dimen/tab_text_big" />

            <View
                android:layout_width="10px"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_item_name4"
                android:layout_width="10px"
                android:layout_height="wrap_content"
                android:layout_weight="13"
                android:gravity="center"
                android:maxLines="1"
                android:text="现钞买入\n汇率"
                android:textColor="#fff"
                android:textSize="@dimen/tab_text_big" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_weight="19" />

            <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_weight="1" />

            <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_weight="13" />

            <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_weight="1" />

            <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_weight="13" />

            <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_weight="1" />

            <View
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_weight="13" />
        </TableRow>

    </TableLayout>

    <ScrollView
        android:id="@+id/sv_tab1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tl_tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--android:stretchColumns="0,2,4,6">-->

            </TableLayout>

            <TableLayout
                android:id="@+id/tl_bottom1"
                android:layout_width="match_parent"
                android:layout_height="10px">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="10px"
                        android:layout_height="match_parent"
                        android:layout_weight="19" />

                    <View
                        android:layout_width="10px"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="10px"
                        android:layout_height="match_parent"
                        android:layout_weight="13" />

                    <View
                        android:layout_width="10px"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="10px"
                        android:layout_height="match_parent"
                        android:layout_weight="13" />

                    <View
                        android:layout_width="10px"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <View
                        android:layout_width="10px"
                        android:layout_height="match_parent"
                        android:layout_weight="13" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:paddingTop="5px"
        android:paddingBottom="3px"
        android:textSize="@dimen/tab_text_big" />
</LinearLayout>
