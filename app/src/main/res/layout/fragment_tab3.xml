<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08ffffff"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,2,4,6">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#08ffffff"
                android:gravity="center"
                android:maxLines="1"
                android:text="货币"
                android:textColor="#fff"
                android:textSize="@dimen/tab_text" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tv_item_name2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#08ffffff"
                android:gravity="center"
                android:maxLines="1"
                android:text="买入汇率"
                android:textColor="#fff"
                android:textSize="@dimen/tab_text" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tv_item_name3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#08ffffff"
                android:gravity="center"
                android:maxLines="1"
                android:text="卖出汇率"
                android:textColor="#fff"
                android:textSize="@dimen/tab_text" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tv_item_name4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#08ffffff"
                android:gravity="center"
                android:maxLines="1"
                android:text="现钞买入\n汇率"
                android:textColor="#fff"
                android:textSize="@dimen/tab_text" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#08ffffff" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#08ffffff" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#08ffffff" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#08ffffff" />
        </TableRow>

    </TableLayout>

    <ScrollView
        android:id="@+id/sv_tab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tl_tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,2,4,6">

            </TableLayout>

            <TableLayout
                android:id="@+id/tl_bottom1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:stretchColumns="0,2,4,6">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="#08ffffff" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="#08ffffff" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="#08ffffff" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="#08ffffff" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
