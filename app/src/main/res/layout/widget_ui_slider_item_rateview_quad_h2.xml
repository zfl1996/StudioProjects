<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@color/tab_left"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/tab_left"
            android:ems="1"
            android:gravity="center"
            android:text="人民币存款利率"
            android:textColor="#fff"
            android:textSize="@dimen/text_big_super" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/tab_title">

                <TextView
                    android:id="@+id/tv_key"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"
                    android:text="货币"
                    android:textColor="#fff"
                    android:textSize="@dimen/tab_text_super" />

                <View
                    android:layout_width="0.1px"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"
                    android:text="买入汇率"
                    android:textColor="#fff"
                    android:textSize="@dimen/tab_text_super" />

                <View
                    android:layout_width="0.1px"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/tv_value2"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="5px"
                    android:paddingTop="20px"
                    android:paddingRight="5px"
                    android:paddingBottom="20px"
                    android:text="卖出汇率"
                    android:textColor="#fff"
                    android:textSize="@dimen/tab_text_super" />

                <View
                    android:layout_width="0.1px"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/tv_value3"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="5px"
                    android:paddingTop="20px"
                    android:paddingRight="5px"
                    android:paddingBottom="20px"
                    android:text="现钞买入汇率"
                    android:textColor="#fff"
                    android:textSize="@dimen/tab_text_super" />
            </TableRow>
        </TableLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvRate"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@color/tab_row1"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_bottom"
            android:gravity="center"
            android:paddingTop="5px"
            android:paddingBottom="3px"
            android:textColor="#fff"
            android:textSize="@dimen/tab_text_super" />
    </LinearLayout>
</LinearLayout>
