<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeTextView">
        <attr name="scroll_interval" format="integer" />
        <attr name="scroll_first_delay" format="integer"/>
        <attr name="scroll_mode">
            <enum name="mode_forever" value="100"/>
            <enum name="mode_once" value="101"/>
        </attr>
        <attr name="scroll_direction">
            <enum name="direction_hor" value="1"/>
            <enum name="direction_ver" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="MarqueeVerticalTextViewStyle">
        <attr name="mvTextSize" format="dimension|reference"/>
        <attr name="mvTextColor" format="color|reference"/>
        <attr name="mvSingleLine" format="boolean"/>
        <attr name="mvFont" format="reference"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="RecyclerPagerView">
        <attr name="displayMode">
            <enum name="fullScreen" value="0" />
            <enum name="wide" value="1" />
            <enum name="narrow" value="2" />
        </attr>
        <attr name="rate_save_layout" format="integer|reference" />
        <attr name="rate_loan_layout" format="integer|reference" />
        <attr name="rate_buy_layout" format="integer|reference" />
    </declare-styleable>
</resources>